<div class=header>
  <nav class="navbar nav navbar-defaut ">
    <!-- Main menu -->
    <div class="collapse navbar-collapse">
      <ul class="nav navbar-nav">
        <li>
          <a href="/home" class="logo" style="text-transform: inherit; padding: 0;">
            <h1>Kipalog</h1>
          </a>
        </li>
        <li>
          <form class="form-inline search">
            <input class="form-control mr-sm-2 input" type="search" placeholder="Tìm kiếm" aria-label="Search">
          </form>
        </li>
      </ul>
      <ul class="nav navbar-nav navbar-right">
        <li>
          <a href="/posts/new"><i class="fa fa-pencil-square-o" aria-hidden="true"></i>
            <strong>Viết bài</strong><i class="fa fa-caret-down" aria-hidden="true"></i></a>
          <div class="dropdown dropdown-menu-right">
            <p><a onclick="" href="">Dùng mẫu</a></p>
            <p><a onclick="" href="">Bản nháp</a></p>
            <p><a href=""><b>Xem tất cả bản nháp</b></a></p>
          </div>
        </li>
        <li>
          <a href="/home"><i class="fa fa-home" aria-hidden="true"></i>
            <strong>Trang chủ</strong>
          </a>
        </li>
        <li class="dropdown">
          <a class="dropdown-toggle" id="notify" data-toggle="dropdown" href="#">
            <i class="fa fa-bell">
              <%if (noti_count > 0) { %>
              <span class="num" id="notify-count">
                <%= noti_count %></span>
              <% } %>
            </i>
          </a>
          <ul class="dropdown-menu notifications">
            <div class="notification-heading">
              <h4 class="menu-title">Notifications</h4>
            </div>
            <li class="divider"></li>
            <div class="notifications-wrapper">
              <% notifications.map(noti => { %>
              <a class="content" href="/posts/<%= noti.post_id%>">
                <div class="notification-item">
                  <p class="item-title">
                    <%= noti.title %>
                  </p>
                  <h4 class="item-info">
                    <%= noti.info %>
                  </h4>
                </div>
              </a>
              <% } )%>
            </div>
            <li class="divider"></li>
            <div class="notification-footer">
              <h4 class="menu-title">More
                <i class="fa fa-angle-double-down" aria-hidden="true"></i>
            </div>
          </ul>
        </li>
        <li>
          <span>
            <img src="/img/test.jpg" alt="ảnh">
          </span>
          <span><i class="fa fa-caret-down" aria-hidden="true" style="color: white"></i></span>
          <div class="dropdown dropdown-menu-right">
            <p><a href="/mypage/:user_id"><i class="fa fa-user" aria-hidden="true"></i>Trang cá nhân</a></p>
            <p><a href=""><i class="fa fa-cog" aria-hidden="true"></i>Cài đặt</a></p>
            <p><a href="" id="log-out"><i class="fa fa-sign-out" aria-hidden="true"></i>Đăng xuất</a></p>
          </div>
        </li>
      </ul>
    </div>
    <!-- End Menu -->
  </nav>

</div>

<script>
  $(function () {
    $('#notify').on('click', function (event) {
      $('#notify-count').hide();
      $.ajax({
        type: 'POST',
        crossDomain: true,
        headers: {
          "Access-Control-Allow-Origin": "*"
        },
        contentType: 'application/json',
        url: '/notifications/markSeenAll',
        success: function (data) {
          console.log('success');
        }
      });
    });

    $('#log-out').on('click', function (event) {
      $.ajax({
        type: 'POST',
        crossDomain: true,
        headers: {
          "Access-Control-Allow-Origin": "*"
        },
        contentType: 'application/json',
        url: '/logout',
        success: function (data) {
          console.log('success');
          window.location.href = '/login';
        }
      });
    });
  });
</script>